class Student
{
    String name;
}
public class PointerExampe{
    public static void updateName(Student stu)
    { 
      stu.name="Nagfeesha";
      
    }
    public static void main(String[] args){
        Student s = new Student();
        s.name = "Hafeesha";
        System.out.println("Before changing the name:"+s.name);
        updateName(s);
        System.out.println("After Updation:"+s.name);
        
        
    }
}
